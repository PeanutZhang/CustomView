<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ezparking.com.customview.acts.WorkMangerActivity">

    <Button
        android:id="@+id/start_ontimework"
        android:text="开启一个work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/stop_onework"
        android:text="停止oneworker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/getworkdata"
        android:text="获取worker 传来的信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="开启一个周期执行的work"
        android:id="@+id/start_periodwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="关闭正在执行的work"
        android:id="@+id/stop_periodwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="获取正在执行的periodwork"
        android:id="@+id/get_periodworkdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
