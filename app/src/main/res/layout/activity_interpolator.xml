<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.ezparking.com.customview.acts.InterpolatorActivity">
   <Button
       android:id="@+id/start_"
       android:text="开始_文字动画"
       android:onClick="interpolatorAnimator"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <Button
        android:id="@+id/stop_"
        android:text="关闭文字动画_"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="interpolatorAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/cirle_tv_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="move your body"
        android:gravity="center"
        android:textColor="#e73410"
        android:textSize="20sp"
        android:textColorHint="#f2c8f4"
        android:id="@+id/char_show"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <Button
        android:id="@+id/btn_objectAnimator"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/start_"
        android:onClick="interpolatorAnimator"
        android:text="使用ObjectAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_phone"
        android:src="@drawable/phone"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/char_show"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/btn_phoneRingring"
        android:onClick="interpolatorAnimator"
        app:layout_constraintTop_toBottomOf="@id/btn_objectAnimator"
        android:layout_marginTop="10dp"
        android:text="the phone is ringring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
