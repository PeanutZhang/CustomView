<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ezparking.com.customview.acts.PatheViewActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   <Button
       android:id="@+id/btn_refresh"
       android:text="开启刷新雷达图"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <Button
       android:text="停止刷新"
       android:id="@+id/stop_animation"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   </LinearLayout>

   <com.ezparking.com.customview.views.SpiderRadar
       android:id="@+id/spiderradar"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       />
   <TextView
       android:text="fuck the partting line"
       android:textSize="8sp"
       android:gravity="center"
       android:padding="3dp"
       android:background="#999"
       android:textColor="#ff0000"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
   <com.ezparking.com.customview.views.PathLView
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp" />
</LinearLayout>
