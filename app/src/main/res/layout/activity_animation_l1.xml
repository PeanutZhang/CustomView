<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezparking.com.customview.acts.AnimationL1Activity">
    <TextView
        android:id="@+id/btn_startAniSet"
        android:text="start animation set"
        android:background="#f3f3f3"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_aniSet"
        android:background="#55ff00ff"
        android:text="to do "
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/btn_startAniSet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="160dp" />
    <TextView
        android:id="@+id/tv_btn2"
        android:text="click me "
        android:background="#333333"
        app:layout_constraintLeft_toRightOf="@+id/btn_startAniSet"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/btn_startAniSet"
        app:layout_constraintBottom_toBottomOf="@id/btn_startAniSet"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
     <Button
         android:id="@+id/btn_start_property"
         android:text="start a property"
         android:layout_marginTop="5dp"
         app:layout_constraintTop_toBottomOf="@id/btn_startAniSet"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_property2"
        android:text="开始属性动画a"
        android:textSize="14sp"
        android:layout_margin="8dp"
        android:onClick="startAnimation"
        app:layout_constraintTop_toBottomOf="@id/btn_start_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cancel_animation"
        android:textSize="14sp"
        android:text="取消动画"
        app:layout_constraintTop_toBottomOf="@+id/btn_property2"
        android:onClick="startAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:background="#0000ff"
        android:gravity="center"
        android:text="i'm flying"
        android:textColor="#ff0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aniSet"
        app:layout_constraintVertical_bias="0.008" />
    <Button
        android:id="@+id/btn_changeColor"
        android:text="改变颜色动画"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
